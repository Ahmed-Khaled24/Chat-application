<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&family=Righteous&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="css/chat.css">
    <link rel="icon" href="img/icon.png">
    <title>Chat room</title>
</head>
<body>
    <section id="messages-area">

        <div class="chat-heading">
            <h1> Chat room</h1>
            <nav > 
                <a href="/logout" class="nav-item link-light" id="logout-link"> Logout </a>
                <a href="/profile" class="nav-item link-light"> Profile </a>
            </nav>
        </div>

        <div id="messages">
             <!-- Filled from the database -->
        </div>   

        <div class="message-input">
            <form action="/messages" method="post" id="send-message-form">
                <input name="content" id="message-content"  placeholder="Type message..." class="form-control form-control-lg" autocomplete="off">
                <button type="submit" class="btn btn-success"> <img src="img/send-icon.png" style="width: 25px; height: 25px;"> </button>
            </form>
        </div>

    </section>

    <script src="https://cdn.socket.io/4.5.0/socket.io.min.js" integrity="sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k" crossorigin="anonymous"></script>
    <script src="js/util.js"></script>
    <script src="js/chat.js"></script>
</body>
</html>